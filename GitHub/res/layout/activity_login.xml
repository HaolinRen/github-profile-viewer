<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sample.github"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/logo_background_content_description"
        android:src="@drawable/github_background" >
    </ImageView>

    <com.sample.github.views.CustomFontEditText
        android:id="@+id/user_account_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_account_hint"
        android:padding="10dp"
        app:textFont="Roboto_Light"
    />

    <ImageButton
        android:id="@+id/view_profile_ib"
        style="@style/ImageButtonBlack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/view_profile_button_content_description"
        android:padding="10dp"
        android:src="@drawable/view_profile_button" >
    </ImageButton>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:contentDescription="@string/github_logo_background_content_description"
        android:src="@drawable/github_logo_transparent" >
    </ImageView>

</LinearLayout>